<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetflixToIMDb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/imdb_yellow_dark</item>
        <item name="colorPrimaryVariant">@color/imdb_yellow_very_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/netflix_red_dark</item>
        <item name="colorSecondaryVariant">@color/netflix_red_very_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- avoid the strange white screen when starting the app -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>

    </style>
</resources>
